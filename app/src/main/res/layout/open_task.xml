<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_background"
    tools:context=".Tasks.OpenTask">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/doit_logo_text" />

        <TextView
            android:id="@+id/parentalVerificationTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Task"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="30dp"
            android:fontFamily="@font/apoppins"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/taskNameTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Make my bed"
            android:textColor="@color/blue"
            android:textSize="25dp"
            android:fontFamily="@font/apoppins"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:text="Reward upon completion"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:fontFamily="@font/apoppins"/>

        <TextView
            android:id="@+id/taskPointsTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="50 points"
            android:gravity="center"
            android:textColor="@color/blue"
            android:textSize="25dp"
            android:background="@drawable/rounded_rect_10"
            android:padding="15dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:fontFamily="@font/apoppins"/>

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/apoppins"
            android:text="Task's Description"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/taskDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/thin_poppins"
            android:text="Task description"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:padding="20dp"
            android:background="@drawable/rounded_rect_10"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/apoppins"
            android:text="Task's Location"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/taskLocationTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/rounded_rect_10"
            android:fontFamily="@font/thin_poppins"
            android:padding="20dp"
            android:text="Coordinates"
            android:textColor="@color/white"
            android:textSize="15dp" />

    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/finalcompleteTask_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/blue"
        android:fontFamily="@font/thin_poppins"
        android:padding="10dp"
        android:text="Complete task"
        android:textAllCaps="false"
        android:textSize="20dp"
        app:cornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="20dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>