<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_background"
    tools:context=".About.AboutActivity"
    >
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent">

    <TextView
        android:id="@+id/aboutTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="40dp"
        android:fontFamily="@font/apoppins"
        android:text="About"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="25dp" />

    <RelativeLayout
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/aboutTV"
        android:layout_marginStart="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="40dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:src="@drawable/doit_logo_text" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/imageView3"
            android:fontFamily="@font/apoppins"
            android:text="Do It App"
            android:textColor="@color/blue"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView3"
            android:layout_toRightOf="@id/imageView3"
            android:fontFamily="@font/thin_poppins"
            android:text="VERSION 1.0"
            android:textColor="@color/white"
            android:textSize="15dp"
            />

        <View
            android:id="@+id/view3"
            android:layout_width="2dp"
            android:layout_height="75dp"
            android:background="@color/white"
            android:layout_toRightOf="@id/textView3"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="10dp"
            />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_toRightOf="@id/view3"
            android:layout_marginStart="10dp"
            android:src="@drawable/kang_signature" />


    </RelativeLayout>

        <TextView
        android:id="@+id/textView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/logo"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="20dp"
        android:fontFamily="@font/apoppins"
        android:gravity="center"
        android:padding="5dp"
        android:text="by"
        android:textColor="@color/white"
        android:textSize="15dp" />

        <TextView
        android:id="@+id/textView17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView18"
        android:gravity="center"
        android:text="Kang Joo Ann Adrian"
        android:fontFamily="@font/thin_poppins"
        android:textColor="@color/blue"
        android:textSize="20dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="20dp"/>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/textView17"
        android:background="@android:color/darker_gray" />

    <TextView
        android:id="@+id/textView26"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/view"
        android:text="App Description"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:gravity="center"
        android:fontFamily="@font/thin_poppins"/>

    <TextView
        android:id="@+id/textView25"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView26"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/rounded_rect_20"
        android:fontFamily="@font/thin_poppins"
        android:padding="10dp"
        android:text="@string/AppDesc"
        android:textColor="@color/white"
        android:textSize="15dp" />

        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/textView25"
            android:layout_marginStart="40dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="40dp"
            android:background="@android:color/darker_gray" />

        <TextView
            android:id="@+id/textView19"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/view2"
            android:gravity="center"
            android:text="Contact"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:fontFamily="@font/thin_poppins"
            android:layout_marginTop="20dp"
            />

        <TextView
            android:id="@+id/textView22"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView19"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_weight="1"
            android:fontFamily="@font/thin_poppins"
            android:gravity="center"
            android:text="Instagram | Digital Namecard | LinkedIn"
            android:textColor="@color/white"
            android:textSize="12dp" />

        <LinearLayout
            android:id="@+id/buttonLL"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_below="@id/textView22"
            android:gravity="center">

            <ImageView
                android:id="@+id/instagramButton"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:clickable="true"
                app:srcCompat="@drawable/instagram_icon"
                tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck" />

            <ImageView
                android:id="@+id/namecardButton"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:clickable="true"
                app:srcCompat="@drawable/namecard_icon"
                tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck" />

            <ImageView
                android:id="@+id/linkedinButton"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:clickable="true"
                app:srcCompat="@drawable/linkedin_icon"
                tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck" />
        </LinearLayout>

        <View
            android:id="@+id/view4"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/buttonLL"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:layout_weight="1"
            android:background="@android:color/darker_gray" />

        <TextView
            android:id="@+id/textView27"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/view4"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="Do It's App Document"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:fontFamily="@font/thin_poppins"
            />

        <RelativeLayout
            android:id="@+id/documentationDocs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView27"
            android:layout_marginStart="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/rounded_rect_10"
            android:clickable="true"
            android:padding="10dp">

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:src="@drawable/googledocs_icon" />

            <TextView
                android:id="@+id/textView23"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/imageView9"
                android:fontFamily="@font/apoppins"
                android:text="App Features-Documentation"
                android:textColor="@color/blue"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/textView24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView23"
                android:layout_marginStart="10dp"
                android:layout_toRightOf="@id/imageView9"
                android:fontFamily="@font/thin_poppins"
                android:text="Google Docs by Adrian Kang"
                android:textColor="@color/white"
                android:textSize="10dp" />
        </RelativeLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/about_backButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/documentationDocs"
            android:backgroundTint="@color/blue"
            android:fontFamily="@font/thin_poppins"
            android:padding="10dp"
            android:text="Back to Home"
            android:textAllCaps="false"
            android:textSize="20dp"
            app:cornerRadius="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="20dp"/>


    </RelativeLayout>
</ScrollView>