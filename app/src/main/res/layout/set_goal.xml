<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_background"
    tools:context=".Rewards.SetGoalActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/doit_logo_text" />

        <TextView
            android:id="@+id/setgoalTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Set a Goal"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="30dp"
            android:fontFamily="@font/apoppins"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/goalNameTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="What's the goal?"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:fontFamily="@font/apoppins"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            />

        <EditText
            android:id="@+id/goalName"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="eg. LegoCity Police Set (Max 30 characters)"
            android:maxLength="30"
            android:textColorHint="@color/hint"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:gravity="center_vertical"
            android:fontFamily="@font/thin_poppins"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:paddingStart="15dp"
            android:background="@drawable/rounded_rect_10"/>

        <TextView
            android:id="@+id/pointsReqTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Points needed"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:fontFamily="@font/apoppins"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp"
            />

        <EditText
            android:id="@+id/pointsCostGoal"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:ems="10"
            android:inputType="number"
            android:hint="Enter the number of points (eg. 50)"
            android:textColorHint="@color/hint"
            android:textSize="15dp"
            android:textColor="@color/white"
            android:gravity="center_vertical"
            android:fontFamily="@font/thin_poppins"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:paddingStart="15dp"
            android:background="@drawable/rounded_rect_10"/>

        <TextView
            android:id="@+id/imageofGoalTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Upload an image of the goal"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:fontFamily="@font/apoppins"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp"
            />

        <ImageView
            android:id="@+id/goalUploadImage"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/rounded_rect_10"
            android:clickable="true"
            android:padding="10dp"
            tools:ignore="SpeakableTextPresentCheck"
            tools:srcCompat="@drawable/image_upload" />

    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/setGoal_Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/blue"
        android:fontFamily="@font/thin_poppins"
        android:padding="10dp"
        android:text="Set Goal!"
        android:textAllCaps="false"
        android:textSize="20dp"
        app:cornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="20dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>